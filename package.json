{
  "name": "fight-game",
  "version": "1.0.0",
  "description": "⚔️ Real-time multiplayer battle game - Моргиналово Западное",
  "main": "server/start-simple.js",
  "scripts": {
    "dev:server": "nodemon server/start-simple.js",
    "dev:client": "parcel client/src/index.html --port 1234 --open",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "parcel build client/src/index.html --dist-dir client/dist --public-url ./",
    "start": "node server/start-simple.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint client/src server --ext .js,.jsx",
    "clean": "rimraf client/dist .parcel-cache"
  },
  "keywords": [
    "game", 
    "multiplayer", 
    "realtime", 
    "socket.io", 
    "react", 
    "battle"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^6.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "parcel": "^2.9.3",
    "@parcel/transformer-js": "^2.9.3",
    "@parcel/transformer-react-refresh-wrap": "^2.9.3",
    "@parcel/transformer-sass": "^2.9.3",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "jest": "^29.6.1",
    "rimraf": "^5.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}